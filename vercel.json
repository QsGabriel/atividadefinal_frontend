{
  "rewrites": [
    {
      "source": "/propostas",
      "destination": "/proposals.html"
    },
    {
      "source": "/orcamentos",
      "destination": "/proposals.html"
    },
    {
      "source": "/contratos",
      "destination": "/proposals.html"
    },
    {
      "source": "/docs",
      "destination": "/proposals.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
}
